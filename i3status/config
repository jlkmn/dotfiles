general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless wlx54ef33fc19c6"
order += "path_exists VPN"
order += "memory"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "tztime local"
order += "tztime berlin"

wireless wlx54ef33fc19c6 {
        format_up = "🌐 W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
	format = "🛡️ %title %status"
        path = "/proc/sys/net/ipv4/conf/nordlynx"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime berlin {
        format = "⌚ %Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

load {
        format = "🔥 Load %1min"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

cpu_usage {
	format = "CPU %usage"
}

disk "/" {
        format = "📦 %avail"
}

read_file uptime {
        path = "/proc/uptime"
}
